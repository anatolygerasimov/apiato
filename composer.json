{
  "name": "apiato/apiato",
  "type": "project",
  "description": "Uinno starter kit.",
  "require": {
    "php": "^7.4",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "ext-pdo": "*",
    "ext-tokenizer": "*",
    "laravel/framework": "^8.12",
    "doctrine/dbal": "^2.6",
    "fideloper/proxy": "^4.4",
    "guzzlehttp/guzzle": "^7.0.1",
    "laravel/tinker": "^2.5",
    "fruitcake/laravel-cors": "^2.0",
    "wikimedia/composer-merge-plugin": "^2.0.1"
  },
  "require-dev": {
    "facade/ignition": "^2.5",
    "fakerphp/faker": "^1.9.1",
    "mockery/mockery": "^1.4.2",
    "nunomaduro/collision": "^5.0",
    "phpunit/phpunit": "^9.5",
    "friendsofphp/php-cs-fixer": "^2.18",
    "rector/rector-prefixed": "^0.9.31",
    "psalm/plugin-laravel": "^1.4",
    "vimeo/psalm": "^4.6"
  },
  "autoload": {
    "classmap": [
      "database/seeds",
      "database/factories"
    ],
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {}
  },
  "extra": {
    "laravel": {
      "dont-discover": [
        "*"
      ]
    },
    "merge-plugin": {
      "include": [
        "app/Ship/composer.json",
        "app/Ship/Core/composer.json",
        "app/Containers/*/composer.json",
        "app/Containers/composer.json"
      ],
      "recurse": true,
      "replace": false,
      "merge-dev": true,
      "merge-extra": false,
      "merge-extra-deep": false,
      "merge-scripts": true
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi"
    ],
    "php-cs-fixer": [
      "php ./vendor/bin/php-cs-fixer fix --config=.php_cs.dist --allow-risky=yes --using-cache=no"
    ],
    "php-cs-fixer-check": [
        "php ./vendor/bin/php-cs-fixer fix --dry-run --diff --diff-format=udiff -vv --allow-risky=yes --using-cache=no"
    ],
    "psalm": [
        "php ./vendor/bin/psalm --threads=2 --no-cache"
    ],
    "phpunit": [
        "php ./vendor/bin/phpunit --configuration phpunit.xml"
    ],
    "rector": [
        "php ./vendor/bin/rector process --dry-run"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
